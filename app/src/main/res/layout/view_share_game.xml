<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/default_app_background"
    android:layout_gravity="center"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:id="@+id/parent_ll">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_space"/>

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/hexa_maze_promo"
        android:id="@+id/puzzle_iv"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/level_header_tv"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/default_popup_title"
                android:paddingHorizontal="@dimen/standard_space"
                android:text="Level"
                android:textSize="@dimen/popup_body_text_size"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/level_value_tv"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/default_popup_title"
                android:padding="@dimen/standard_space"
                android:text="EASY"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/time_header_tv"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/default_popup_title"
                android:paddingHorizontal="@dimen/standard_space"
                android:text="Session time"
                android:textSize="@dimen/popup_body_text_size"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/time_value_tv"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/default_popup_title"
                android:padding="@dimen/standard_space"
                android:text="12:38"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginBottom="@dimen/standard_space"
        android:layout_marginHorizontal="@dimen/standard_space"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/app_icon_container_cv"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/standard_half_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/app_logo_iv"
                android:src="@drawable/app_launcher"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/app_title_tv"
            android:textColor="@color/default_share_view_app_title_text"
            android:layout_marginStart="@dimen/standard_space"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:background="@color/default_normal_divider"
        android:id="@+id/divider_view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ImageView
        android:layout_marginVertical="@dimen/standard_half_space"
        android:src="@drawable/google_play_badge"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_space"/>

</androidx.appcompat.widget.LinearLayoutCompat>